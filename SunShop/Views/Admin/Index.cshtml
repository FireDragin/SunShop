@model IEnumerable<SunShop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <p>
        @Html.ActionLink("Tạo sản phẩm", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
               Tên sản phẩm
            </th>
            <th>
                Mô tả
            </th>
            <th>
               Giá
            </th>
            <th>
               Ảnh 
            </th>
            <th>
                Loại sản phẩm
            </th>
            <th>
                Hàng tồn kho
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="~/Images/@Url.Content(item.ImgUrl)"
                         alt="Image"
                         width="50"
                         height="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityStock)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Xóa sản phẩm", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
