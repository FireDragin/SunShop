<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playball&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header id="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container">
                <div class="navbar_logo">
                    <a href="@Url.Action("Index", "Home")" class="navbar_logo-link">
                        <img class="navbar-logo-item" src="~/Images/logo.jpg" />
                    </a>
                </div>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                 
                <div class="collapse d-md-flex navbar-collapse justify-content-between align-items-center bg-white pb-2 pb-md-0">
                    <div class="d-flex justify-content-center flex-grow-1 gap-4 align-items-center">
                       
                        <form method="get" action="/Home/Search">
                            <div class="box-search">
                                <input name="key_search" type="text" class="input-search" placeholder="Tìm kiếm" />
                                <button class="btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                            </div>
                        </form>
                      
                        <ul class="navbar-nav">
                            <li class="nav-link">
                                <a href="@Url.Action("Index", "Home")" class="text-decoration-none">Home</a>
                            </li>
                            <li class="nav-link">
                                <a href="@Url.Action("About", "Home")" class="text-decoration-none">About</a>
                            </li>
                            <li class="nav-link">
                                <a href="@Url.Action("Contact", "Home")" class="text-decoration-none">Contact</a>
                            </li>

                        </ul>
                    </div>

                    <div class="d-flex align-items-center justify-content-center cart-container">
                        <a href="@Url.Action("Index", "Cart")" class="cart-link position-relative">
                            <i class="fa-solid fa-bag-shopping"></i>
                            <span class="quantity-cart"></span>
                        </a>
                    </div>

                    <div class="d-block d-md-none">
                        <div class="w-100">
                            <a href="@Url.Action("Login", "Auth")" class="btn-login m-auto text-decoration-none">Đăng nhập</a>
                        </div>
                    </div>
                </div>
                <div class="d-none d-md-flex ms-5">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="w-100">
                            <a href="@Url.Action("Login", "Auth")" class="btn-login m-auto text-decoration-none">Đăng nhập</a>
                        </div>
                    }
                    else
                    {
                        HttpCookie fullNameCookie = Request.Cookies["FullNameCookie"];
                        string fullName = null;
                        if (fullNameCookie != null)
                        {
                            fullName = HttpUtility.UrlDecode(fullNameCookie.Value);
                        }
                        <div class="d-none d-md-flex ms-5">
                            <div class="avatar-user-container d-flex align-items-center justify-content-center">
                                <div class="d-flex align-items-center gap-2">
                                    <span>@fullName</span>
                                    <img class="avatar-user" src="~/Images/chubinngo.jpg" alt="Alternate Text" />
                                </div>
                                <ul class="sub-menu-user flex-column list-unstyled">
                                    <li>
                                        <a href="#">Thông tin</a>
                                    </li>                                   
                                    <li>
                                        <a href=@Url.Action("Logout", "Auth")>Đăng xuất</a>
                                    </li>
                                </ul>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="content">
        @RenderBody()
    </div>
    <footer id="footer" class="mt-4">
        <div class="container">
            <div class="row gy-3">
                <div class="col-sm-12 col-md-4">
                    <div class="working-hour-container">
                        <div class="brand-container">
                            <div class="d-flex align-items-center gap-2">
                                <img src="~/Images/logo.jpg" alt="Alternate Text" />
                                <h2>SUN SHOP</h2>
                            </div>
                        </div>
                        <div class="d-flex flex-column gap-3 mt-2">
                            <span class="working-hour">Thứ 2 –  Thứ 7 : 12:00am – 23:00pm</span>
                            <span class="close-hour">Đóng cửa vào chủ nhật</span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-2">
                    <span class="footer-item-heading">About</span>
                    <ul class="list-unstyled d-flex flex-column gap-2 mt-2">
                        <li>
                            <a class="footer-item-link" href="#">Fredoka One</a>
                        </li>
                        <li>
                            <a class="footer-item-link" href="#">Fredoka One</a>
                        </li>
                        <li>
                            <a class="footer-item-link" href="#">Fredoka One</a>
                        </li>
                        <li>
                            <a class="footer-item-link" href="#">Fredoka One</a>
                        </li>
                        <li>
                            <a class="footer-item-link" href="#">Fredoka One</a>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-12 col-md-2">
                    <span class="footer-item-heading">About</span>
                    <ul class="list-unstyled d-flex flex-column gap-2 mt-2">
                        <li>
                            <a class="footer-item-link" href="#">Fredoka One</a>
                        </li>
                        <li>
                            <a class="footer-item-link" href="#">Fredoka One</a>
                        </li>
                        <li>
                            <a class="footer-item-link" href="#">Fredoka One</a>
                        </li>
                        <li>
                            <a class="footer-item-link" href="#">Fredoka One</a>
                        </li>
                        <li>
                            <a class="footer-item-link" href="#">Fredoka One</a>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-12 col-md-4">
                    <span class="footer-item-heading">Liên hệ</span>
                    <div class="mt-4">
                        <span>Để lại email, chúng tôi sẽ phản hồi bạn sớm nhất có thể</span>
                        <form action="/" method="post" class="h-100 d-flex flex-column gap-3 mt-3">
                            <input class="input-email-contact" placeholder="email" type="text" name="name" value="" />
                            <div class="position-relative btn-submit-contact-container">
                                <button type="submit" class="btn-submit-contact">Gửi</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </footer>

    @*toast*@
    <div class="toast align-items-center" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body flex-grow-1 text-center">
                Hello, world! This is a toast message.
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
